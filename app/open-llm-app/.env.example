# ANDI Ollama Configuration
# Copy this file to .env and update with your settings

# Ollama Server Configuration
OLLAMA_HOST=0.0.0.0
OLLAMA_PORT=11434
OLLAMA_BASE_URL=http://localhost:11434

# Model Configuration
OLLAMA_CIQ_MODEL=andi-ciq-analyzer
OLLAMA_COACH_MODEL=andi-coach
OLLAMA_REALTIME_MODEL=andi-realtime

# Performance Settings
OLLAMA_MAX_LOADED_MODELS=3
OLLAMA_KEEP_ALIVE=24h
OLLAMA_NUM_PARALLEL=4

# GPU Configuration (if available)
OLLAMA_GPU=true
OLLAMA_GPU_MEMORY_FRACTION=0.8

# Web UI Settings
WEBUI_SECRET_KEY=andi_secret_key_2024
WEBUI_AUTH=false
WEBUI_PORT=8080

# Integration Settings
LANGFLOW_OLLAMA_ENABLED=true
LANGFLOW_OLLAMA_URL=http://ollama:11434

# Logging
OLLAMA_LOG_LEVEL=info
OLLAMA_DEBUG=false

# Model Download Settings
OLLAMA_AUTO_PULL=true
OLLAMA_DOWNLOAD_TIMEOUT=3600

# Security
OLLAMA_CORS_ORIGINS=http://localhost:3000,http://localhost:7860,http://localhost:8080